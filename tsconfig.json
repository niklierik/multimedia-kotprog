{
    "compilerOptions": {
        "target": "ES2015",
        "module": "node16",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node16",
        "rootDir": ".",
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "sourceMap": true,
        "noImplicitThis": false,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ]
}