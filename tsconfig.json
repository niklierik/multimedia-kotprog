{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "moduleResolution": "Node",
        "rootDir": ".",
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": false,
        "noImplicitThis": false,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ]
}